{
  "compilerOptions": {
      "target": "es6",
      "types": ["node"],
      "typeRoots": ["node_modules/@types"],
      "module": "commonjs",
      "outDir": "dist",
      "rootDir": "./",
      "removeComments": true,
      "strict": false, 
      "skipLibCheck": true,
      "strictNullChecks": true,
      "noImplicitThis": true,
      "inlineSourceMap": true,
      "moduleResolution": "node",
      "sourceRoot": "src",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
  },
  "include": [
      "src"
  ],
  "exclude": [
      "dist",
      "node_modules"
  ]
} 