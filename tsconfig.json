{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@eth-sd/*": ["./eth-sdk/*"],
      "@sdk-client/*": ["./dethcrypto/eth-sdk-client/*"]
    },
    "target": "es6",
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "./",
    "removeComments": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "inlineSourceMap": true,
    "moduleResolution": "node",
    "sourceRoot": "src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "MongoHelper.ts", "eth-sdk-client"],
  "exclude": ["dist", "node_modules"]
}
